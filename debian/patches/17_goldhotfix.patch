Description: Link gnutls-extra gainst libgcrypt
 Needed for building with gold.
 This a hotfix, touch generated files. A proper patch has been
 forwarded upstream.
Author: Andreas Metzler <ametzler@downhill.at.eu.org>
Forwarded: http://lists.gnu.org/archive/html/gnutls-devel/2011-03/msg00017.html

--- gnutls26-2.11.7.orig/libextra/Makefile.in
+++ gnutls26-2.11.7/libextra/Makefile.in
@@ -531,7 +531,7 @@ libgnutls_openssl_la_LDFLAGS = -no-undef
 @ENABLE_OPENSSL_TRUE@	../lib/libgnutls.la $(am__append_4)
 
 # OpenPGP
-libgnutls_extra_la_LIBADD = $(LIBSOCKET) ../lib/gl/liblgnu.la \
+libgnutls_extra_la_LIBADD = $(LIBSOCKET) -lgcrypt ../lib/gl/liblgnu.la \
 	gl/libxgnu.la ../lib/libgnutls.la
 libgnutls_extra_la_LDFLAGS = -no-undefined $(am__append_8) \
 	-version-info $(LT_CURRENT):$(LT_REVISION):$(LT_AGE) \
